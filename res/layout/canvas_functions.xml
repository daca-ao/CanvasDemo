<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/canvas_functions"
    android:orientation="vertical"
    android:background="#fff" >
   	
   	<RelativeLayout 
   	    android:id="@+id/canvas_selection_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_horizontal" >
        <ImageView 
            android:id="@+id/canvas_pen"
            android:contentDescription="@string/image_desc"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/button_margin"
            android:padding="@dimen/button_margin"
            android:src="@drawable/pentool_normal"
            android:clickable="true" />
        <ImageView 
            android:id="@+id/canvas_background"
            android:contentDescription="@string/image_desc"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/button_margin"
            android:padding="@dimen/button_margin"
            android:layout_toRightOf="@id/canvas_pen"
            android:layout_toEndOf="@id/canvas_pen"
            android:src="@drawable/change_background_color_nomal"
            android:clickable="true" />
        <ImageView 
            android:id="@+id/canvas_rubber"
            android:contentDescription="@string/image_desc"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/button_margin"
            android:padding="@dimen/button_margin"
            android:layout_toRightOf="@id/canvas_background"
            android:layout_toEndOf="@id/canvas_background"
            android:src="@drawable/rubbertool_normal"
            android:clickable="true" />
        <ImageView 
            android:id="@+id/canvas_done"
            android:contentDescription="@string/image_desc"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/button_margin"
            android:padding="@dimen/button_margin"
            android:layout_toRightOf="@id/canvas_rubber"
            android:layout_toEndOf="@id/canvas_rubber"
            android:src="@drawable/button_down"
            android:clickable="true" />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/canvas_color_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:layout_margin="@dimen/button_margin"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/change_color0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_0" />
        <ImageView
            android:id="@+id/change_color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_1" />
        <ImageView
            android:id="@+id/change_color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_2" />
        <ImageView
            android:id="@+id/change_color3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_3" />
        <ImageView
            android:id="@+id/change_color4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_4" />
        <ImageView
            android:id="@+id/change_color5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_5" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/canvas_color_group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/change_color6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_6" />
        <ImageView
            android:id="@+id/change_color7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_7" />
        <ImageView
            android:id="@+id/change_color8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_8" />
        <ImageView
            android:id="@+id/change_color9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_9" />
        <ImageView
            android:id="@+id/change_colora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_a" />
        <ImageView
            android:id="@+id/change_colorb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/selection_margin"
            android:padding="@dimen/selection_margin"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/color_selection_b" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/canvas_pensize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/button_margin"
        android:orientation="horizontal" >
        <TextView 
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/pen_seekbar"
            android:textStyle="bold" />
        <SeekBar 
            android:id="@+id/canvas_pen_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/button_margin"
            android:paddingRight="@dimen/button_margin"
            android:progress="5"
            android:max="50" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/canvas_rubbersize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/button_margin"
        android:orientation="horizontal" >
        <TextView 
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/rubber_seekbar"
            android:textStyle="bold" />
        <SeekBar 
            android:id="@+id/canvas_rubber_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/button_margin"
            android:paddingRight="@dimen/button_margin"
            android:progress="30"
            android:max="100" />
    </LinearLayout>
</LinearLayout>
